<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="edu.gatech.buzzmovieselector">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
                android:name=".controller.activity.WelcomeActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.LoginActivity"/>
        <activity
                android:name=".controller.activity.BMSActivity"
                android:label="@string/title_activity_bms"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name=".controller.activity.RegisterActivity"
                android:label="Sign Up"/>
        <activity
                android:name=".controller.activity.ProfileActivity"
                android:label="Profile"/>
        <activity android:name=".controller.activity.SearchResultsActivity"/>
        <activity
                android:name=".controller.activity.MovieRatingActivity"
                android:label="Rate Movie"/>
        <activity
                android:name=".controller.activity.RecommendedMoviesActivity"
                android:label="Recommended Movies"/>
        <activity
                android:name=".controller.activity.AdminActivity"
                android:label="Admin"/>
        <activity
                android:name=".controller.activity.UserStatusActivity"
                android:label="User Status"/>

    </application>

</manifest>
